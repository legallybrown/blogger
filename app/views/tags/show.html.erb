<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
    <% end %>
</ul>

<br />

<%= link_to "Delete Tag?", tag_path(@tag), :confirm => "Are you sure you want to delete this tag permanently?", method: :delete %> 